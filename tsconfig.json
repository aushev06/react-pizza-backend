{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "src/*": [
        "./src/*"
      ],
    }
  },
  "typeRoots": [
    "./@types",
    "./node_modules/@types"
  ],
  "include": [
    "src",
    "test",
    "@types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
